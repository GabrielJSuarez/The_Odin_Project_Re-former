<%= form_for @user, method: :patch do |f| %>
    <%= f.label :username, "Enter you username" %>
    <%= f.text_field :username, placeholder: "user_name"%>
<br>
    <%= f.label :email, "Enter your email" %>
    <%= f.email_field :email, placeholder: "example@mail.com" %>
<br>
    <%= f.label :password %>
    <%= f.password_field :password %>
<br>
    <%= f.submit %>
<% end %>